c = "1. Add two numbers\n2. Subtract two numbers\n3. Exit"
print(c)
choice = int(input("Enter your choice(1/2/3): "))
while(choice != 3):
  n1 = int(input("Enter 1st number: "))
  n2 = int(input("Enter 2nd number: "))
  if(choice == 1):
    print("Result: ", n1+n2)
  elif(choice == 2):
    print("Result: ", n1-n2)
  print(c)
  choice = int(input("Enter your choice(1/2/3): "))
print("Program Executed")
